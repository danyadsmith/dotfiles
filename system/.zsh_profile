gcop () {
  local commit
  pbcopy < /dev/null
  git log \
    --reverse \
    --color=always \
    --format="%C(magenta)%h%Creset  %C(yellow)%ad%Creset %Creset %C(blue)%an%Creset %C(white) %s %Creset" "$@" \
    --date=short |
    fzf -i -e +s \
        --reverse \
        --tiebreak=index \
        --no-multi \
        --ansi \
        --preview="echo {} |
                   grep -o '[a-f0-9]\{7\}' |
                   head -1 |
                   xargs -I % sh -c 'git show --color=always % |
                   diff-so-fancy'" \
        --header "enter: view, C-c: copy hash, esc-esc: exit" \
        --bind "enter:execute:$_viewGitLogLine | less -R" \
        --bind "ctrl-c:execute:$_gitLogLineToHash | 
                pbcopy"
  commit=$(pbpaste)
  print $(pbpaste)
}

_viewGitLogLine="echo {} | 
                 grep -o '[a-f0-9]\{7\}' | 
                 head -1 | 
                 xargs -I % sh -c 'git show --color=always %' | 
                 delta"

_gitLogLineToHash="echo {} |
                   grep -o '[a-f0-9]\{7\}' |
                   head -1"
