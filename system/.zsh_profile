
_viewGitLogLine="echo {} | 
                 grep -o '[a-f0-9]\{7\}' | 
                 head -1 | 
                 xargs -I % sh -c 'git show --color=always %' | 
                 delta"

_gitLogLineToHash="echo {} |
                   grep -o '[a-f0-9]\{7\}' |
                   head -1"
gcop () {
  local commit
  pbcopy < /dev/null
  git log \
    --reverse \
    --color=always \
    --format="%C(magenta)%h%Creset  %C(yellow)%ad%Creset %Creset %C(blue)%an%Creset  %C(auto)%d%Creset %C(white) %s %Creset" "$@" \
    --date=short |
    fzf -i -e +s \
        --reverse \
        --tiebreak=index \
        --no-multi \
        --ansi \
        --preview="echo {} |
                   grep -o '[a-f0-9]\{7\}' |
                   head -1 |
                   xargs -I % sh -c 'git show --color=always % |
                   diff-so-fancy'" \
        --header "enter: view, C-c: copy hash, esc-esc: exit" \
        --bind "enter:execute:$_viewGitLogLine | less -R" \
        --bind "ctrl-c:execute:$_gitLogLineToHash | 
                pbcopy"
  commit=$(pbpaste)
  print $(pbpaste)
}

file-info () {
    stat -f "%n   Filename: %SN %n       Type: %ST %n      Inode: %Di %n   Symlinks: %Dl%n %nPermissions: %Sp %n       User: %Su %n      Group: %Sg%n %n   Accessed: %Sa %n   Modified: %Sm %n    Changed: %Sc %n    Created: %SB" $1
}

find-alias () {
    found_alias=$(alias | fzf -i | awk -F"=" '{print $1}')
    print -z $found_alias
}

