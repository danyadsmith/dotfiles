[user]
	name = Danya D. Smith
	email = danyadsmith@gmail.com
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  type = cat-file -t
  dump = cat-file -p
  hist = log --graph --pretty=format:'%C(magenta)%h%Creset  %C(yellow)%ad%Creset%C(white) %s%C(cyan)%d%Creset %Creset%Cgreen(%cr)%Creset [%C(blue)%an%Creset]' --date=short
[color]
	ui = true
  status = always
  diff = always
  branch = auto
  showbranch = auto
[color "diff-highlight"]
  oldNormal = red
  oldHighlight = red bold reverse
  newNormal = green
  newHighlight = green bold reverse
[color "diff"]
  meta = blue
  frag = magenta bold
  commit = blue
  old = red bold
  new = green bold
  whitespace = red reverse
[commit]
  template = ~/.gitmessage
[core]
	editor = vim
	autocrlf = false
	safecrlf = true
	excludesfile = ~/.gitignore_global
  pager = diff-so-fancy | less --tabs=4 -RFX
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[github]
	user = danyadsmith
[ghi]
	token = !security find-internet-password -a danyadsmith -s github.com -l 'ghi token' -w
[pager]
	branch = false
[protocol "keybase"]
	allow = always
[push]
	default = simple
[rerere]
	enabled = true
